<h1>{{categoria.nome}}</h1>
{{#each postagens}}

<div class="card  mt-4">
    <div class="card-body">

        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagem/{{slug}}">
            <button class="btn btn-success">Leia mais</button>
        </a>
        <hr>
        {{!-- <small>Categoria: {{categoriaPostagem.nome}}</small> --}}
        <small>Data de publicação: {{data}}</small>
    </div>
</div>
{{else}}
{{!-- TODO: deixar essa mensagem mais arrumada --}}
<h5>Nenhuma postagem</h5>
{{/each}}